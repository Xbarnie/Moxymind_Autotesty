{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Schema for POST /users response",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "job": {
      "type": "string",
      "minLength": 1
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    }
  },
  "required": ["name", "job", "id", "createdAt"]
}